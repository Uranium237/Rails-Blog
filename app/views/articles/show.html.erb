      <!--</div></td>-->
      <!--<td><div class="about-btn">-->
      <!--<%= link_to 'Back', articles_path %>-->
      <!--</div></td>-->
      <!---->

      <!--</tr>-->

      <!--</table>-->
      <% if current_user.present? and current_user.asadmin == true %>
          <div class="about-btn">
            <%= link_to 'Edit', edit_article_path(@article) %>
          </div>
      <% end %>
      <div class="about-btn">
        <%= link_to 'Back', articles_path %>
      </div>


    </div>
  </div>
</div>