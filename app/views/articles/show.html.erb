<div class="single">
  <div class="container">
    <div class="single-top">
      <div class=" single-grid">
        <h4>
          <!--<strong>Title:</strong>-->
          <%= @article.title %>
        </h4>


        <p>
        <ul class="blog-ic">
          <li><span> <i class="glyphicon glyphicon-user"> </i><%= @article.user.email %></span></li>
          <li><span><i class="glyphicon glyphicon-time"> </i><%= @article.created_at.strftime("%d-%m-%Y") %></span></li>
          <li><span><i class="glyphicon glyphicon-eye-open"> </i>Hits:145</span></li>
        </ul>
        <!--<strong>Text:</strong>-->
        </p>

        <p>
          <%= @article.text %>
        </p>

        <% if @article.image.file? %>
            <p>
              <%= image_tag @article.image.url(:medium) %>
            </p>
        <% end %>
      </div>


      <div class="comments heading">
        <h3>Comments</h3>

        <%= render @article.comments %>

      </div>

      <div class="comment-bottom heading">
        <h3>Leave a Comment</h3>

        <%= render 'comments/form' %>

      </div>
